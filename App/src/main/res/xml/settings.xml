<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/opMode"
        android:title="Mode"
        android:summary="Set application's operation mode"
        android:defaultValue="1"
        android:entries="@array/opMode"
        android:entryValues="@array/opMode"
        android:dialogTitle="Choose operation mode" />

    <EditTextPreference
        android:key="login"
        android:summary="Введите логин"
        android:title="Логин" />

    <CheckBoxPreference
        android:key="enabled"
        android:summary="Отображать логин"
        android:title="Отображать" />

</PreferenceScreen>